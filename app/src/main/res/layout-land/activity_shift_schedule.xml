<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:id="@+id/layout_land"
    tools:context=".ShiftScheduleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <fragment
            android:id="@+id/display_frag"
            android:name="com.example.calendertestapp.DisplayFragment"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_display" />

        <fragment
            android:id="@+id/calendar_frag"
            android:name="com.example.calendertestapp.CalendarFragment"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_calendar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
